<% title "Onpoint Blog" %>
<div class="full-with-bg">
  <div class="small-banner" style="background-image: url(/images/mp_blog_1641.jpg);"></div>
</div>
<div class="content_bg pdtop55">
  <div class="wrapper">
    <div class="content">
      <div class="normal-page">

        <div class="leftcol">
          <% @posts.each do |post| %>
            <div class="blog-box">
              <h3><a href="<%= cms_post_path(post) %>"><%= post.title %></a></h3>
              <div class="blog-info"><%= published_at(post) %> | author: <%= post.author.name %></div>
              <div class="">
                <%= post.description.html_safe %>
              </div>
              <a href="<%= cms_post_path(post) %>" class="read-more">Read full post</a>
            </div>
          <% end %>
        </div>

        <div class="rightcol">
          <div class="sahrethis">
            <div class="share-label">Share</div>
            <ul class="social-media">
              <li><a href="#" title="" class="fb"></a></li>
              <li><a href="#" title="" class="in"></a></li>
              <li><a href="#" title="" class="twt"></a></li>
              <li><a href="#" title="" class="mil"></a></li>
            </ul>
          </div>
          <div class="search_part blog">
            <div class="search_icon"> <a href="#"><img title="" alt="" src="/images/search_icon.jpg"> </a></div>
            <input type="text" class="field" name="" placeholder="SEARCH BLOG">
          </div>
          <div class="widget-box">
            <h3>TOPICS</h3>
            <ul class="link-list">
              <% categories.each do |category| %>
                <li><%= link_to_if category.posts.any?, category.name, cms_category_path(category) %></li>
              <% end %>
            </ul>
          </div>
          <div class="widget-box">
            <h3>TAGS</h3>
            <ul class="link-list">
              <% tags.each do |tag| %>
                <li><%= link_to_if tag.posts.any?, tag.name, cms_tag_path(tag) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="see-all">
        <span>See All Posts</span>
        <a href="#" class="see-all-bttn"></a>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>
<div class="bottom_contact">
  <div class="wrapper">
    <div class="see_work">SEE HOW MAXPOINT CAN WORK FOR YOU. <strong>CONTACT US</strong>.</div> 
    <div class="clear"></div>
  </div>
</div>
