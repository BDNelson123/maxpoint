%h1= @post.title
%p= @post.body

- @post.approved_comments.each_with_index do |comment, idx|
  .comment
    = idx
    %br/
    %p= comment.body
    \-
    = comment.name

= form_for @comment, url: cms_comment_post_path(@post) do |f|
  .field
    = f.label :email
    %br/
    = f.email_field :email
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :body, "Comment"
    %br/
    = f.text_area :body, rows: 5
  = f.submit
