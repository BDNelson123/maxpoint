= horizontal_form_for [:dashboard, @category] do |f|
  = f.h_text_field :name
  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to 'Cancel', dashboard_categories_path, class: 'btn'
    - if @category.persisted?
      = link_to 'Destroy', [:dashboard, @category], :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-danger pull-right'
