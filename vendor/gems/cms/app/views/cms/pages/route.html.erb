<% title(@page.title) if @page %>

<% content_for :meta_description, @page.meta_description %>
<% content_for :meta_keywords, @page.meta_keywords %>

<% if @page && @page.components.any? %>
  <% @page.components.sorted.each do |component| %>
    <%= render_component component %>
  <% end %>
<% elsif @page %>
  <h1><%= @page.title %></h1>
  <p>Add some components!</p>
<% else %>
  <h1>You have no pages.</h1>
  <p>Add a page!</p>
<% end %>
